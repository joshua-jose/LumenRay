{
    "files.exclude": {
        "**/mod.rs": true
    },
    "rust-analyzer.checkOnSave.command": "clippy",
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".*",
                "isAsync": true,
                "cmd": "cargo build",
            },
        ]
    },
    "glsllint.glslangValidatorArgs": "-V"
}